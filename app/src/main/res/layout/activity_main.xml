<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="20dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="OFF"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnToggle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_round"
        android:padding="40dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_lock_power_off"
        android:tint="#FFD700" />

    <TextView
        android:id="@+id/lblStrobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/strobeGroup"
        android:layout_centerHorizontal="true"
        android:text="STROBE SPEED"
        android:textColor="#888888"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/strobeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lblTimer"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button android:id="@+id/btnStrobeSlow" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SLOW" android:textColor="#FFF" android:layout_margin="4dp"/>
        <Button android:id="@+id/btnStrobeFast" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="FAST" android:textColor="#FFF" android:layout_margin="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/timerGroup"
        android:layout_centerHorizontal="true"
        android:text="AUTO-OFF TIMER"
        android:textColor="#888888"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/timerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSOS"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button android:id="@+id/btn15s" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15s" android:textColor="#FFD700" />
        <Button android:id="@+id/btn20s" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20s" android:textColor="#FFD700" />
        <Button android:id="@+id/btn30s" style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="30s" android:textColor="#FFD700" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="EMERGENCY SOS"
        android:backgroundTint="#B00020"/>
</RelativeLayout>